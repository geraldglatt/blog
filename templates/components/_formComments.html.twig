{% form_theme form 'tailwind_2_layout.html.twig' %}
<section class="container ml-8">
    <div class="comments__new">
        <div class="w-full-width">
            {{ form_start(form) }}
            {{ form_label(form.content, 'Nouveau commentaire') }}
            {{ form_widget(form.content)}}
            <button type="submit" class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded text-center align-content">
                Poster mon commentaire
            </button>
            {{ form_end(form) }}
        </div>
    </div>
</section>

