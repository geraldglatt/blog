{% if comment.isApprouved %}
    <div class="comment flex justify-start mb-4">
            <div>
                <div class="block p-6 rounded-lg shadow-lg bg-white">
                    <div class="md:flex md:flex-row">
                        <div class="md:w-96 w-24 flex justify-center 
                        items-center mb-6 lg:mb-0 mx-auto md:mx-0"
                        >
                            {% if comment.author.avatar %}
                                <img src="{{ comment.author.avatar }}" alt="{{ comment.author }}" style="height:100px;width:100px"/>
                            {% else %}
                                <img src="{{ comment.author.avatar }}" alt="{{ comment.author }}" style="height:100px;width:100px"/>
                            {% endif %}
                        </div>
                        <div class="md:ml-6">
                            <p class="text-gray-500 font-light mb-6">
                                {{ comment.content|raw }}
                            </p>
                            <p class="font-semibold text-xl mb-2 text-gray-800">{{ comment.author }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endif %}